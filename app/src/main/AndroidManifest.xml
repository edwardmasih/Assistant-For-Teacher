<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edward.masih.assistantforteacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profile_activity"
            android:label="Profile Manager"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".About"
            android:label="About"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".attendanceActivity"
            android:label="Attendance"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".noteActivity"
            android:label="Notes"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Student_Registration"
            android:label="Registration"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".note_create"
            android:label="Create Note"
            android:parentActivityName=".noteActivity" />
        <activity
            android:name=".Edit_Student"
            android:label="Edit Student Data"
            android:parentActivityName=".Student_Registration" />
        <activity
            android:name=".StudentAttendanceInfo"
            android:label="Attendance Information"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".smsActivity"
            android:label="Messaging"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Login" />
        <activity android:name=".Signup"></activity>
    </application>

</manifest>